{
    "name": "simonschaufi/typo3-phone",
    "type": "typo3-cms-extension",
    "description": "Adds phone number functionality to TYPO3 based on Google's libphonenumber API.",
    "keywords": [
        "TYPO3",
        "libphonenumber",
        "validation",
        "phone"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Simon Schaufelberger",
            "email": "simonschaufi@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "giggsey/libphonenumber-for-php": "^7.0 || ^8.0",
        "league/iso3166": "^2.0 || ^4.0",
        "simonschaufi/typo3-support": "^1.0 || ^2.0 || ^3.0",
        "symfony/polyfill-php80": "^1.25",
        "typo3/cms-core": "^10.4 || ^11.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9",
        "nimut/testing-framework": "^6.0",
        "rector/rector": "0.13.4",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.7",
        "typo3/coding-standards": "^0.5.5"
    },
    "autoload": {
        "psr-4": {
            "SimonSchaufi\\TYPO3Phone\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimonSchaufi\\TYPO3Phone\\Tests\\": "Tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@prepare-extension-test-structure"
        ],
        "prepare-extension-test-structure": [
            "Nimut\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
        ],
        "unit-tests": "TYPO3_PATH_ROOT=$PWD/.Build/public .Build/bin/phpunit --colors=never",
        "dry-run-php-cs-fixer": ".Build/bin/php-cs-fixer fix -v --dry-run --stop-on-violation",
        "run-php-cs-fixer": ".Build/bin/php-cs-fixer fix",
        "dry-run-rector": ".Build/bin/rector process --dry-run",
        "run-rector": ".Build/bin/rector process"
    },
    "config": {
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor",
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "typo3_phone",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "app-dir": ".Build",
            "web-dir": ".Build/public"
        }
    }
}
